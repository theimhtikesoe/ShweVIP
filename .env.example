# Shared credentials
POSTGRES_USER=pnm
POSTGRES_PASSWORD=pnm_password
POSTGRES_DB=pnm

# Backend
BACKEND_PORT=4000
DATABASE_URL=postgresql://pnm:pnm_password@postgres:5432/pnm
REDIS_URL=redis://redis:6379
JWT_ACCESS_SECRET=replace_with_long_random_access_secret
JWT_REFRESH_SECRET=replace_with_long_random_refresh_secret
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d
PROVISION_SSH_USER=root
PROVISION_SSH_PRIVATE_KEY=/run/secrets/pnm_ssh_key
PROVISION_SERVICE_RELOAD_CMD=systemctl reload wg-quick@wg0
PROVISION_DRY_RUN=true

# Frontend
NEXT_PUBLIC_API_BASE_URL=/api
