# Shared credentials
POSTGRES_USER=pnm
POSTGRES_PASSWORD=pnm_password
POSTGRES_DB=pnm

# Backend
BACKEND_PORT=4000
DATABASE_URL=postgresql://pnm:pnm_password@postgres:5432/pnm
REDIS_URL=redis://redis:6379
JWT_ACCESS_SECRET=replace_with_long_random_access_secret
JWT_REFRESH_SECRET=replace_with_long_random_refresh_secret
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=7d
PROVISION_SSH_USER=root
PROVISION_SSH_PRIVATE_KEY=/run/secrets/pnm_ssh_key
# Optional base64 encoded SSH private key for cloud deploys (Railway/Vercel workers)
# PROVISION_SSH_PRIVATE_KEY_B64=
PROVISION_SERVICE_RELOAD_CMD=wg-quick save wg0
PROVISION_DRY_RUN=true
WG_INTERFACE=wg0
# Public endpoint users connect to (domain or public IP with port)
# WG_SERVER_ENDPOINT=vpn.example.com:51820
WG_SERVER_PORT=51820
# Server public key from `wg show wg0 public-key`
# WG_SERVER_PUBLIC_KEY=replace_with_wireguard_server_public_key
WG_ALLOWED_IPS=0.0.0.0/0
WG_DNS=1.1.1.1
WG_PERSISTENT_KEEPALIVE=25
WG_CLIENT_NETWORK_PREFIX=10.10
WG_CLIENT_HOST_OFFSET=2

# Frontend
NEXT_PUBLIC_API_BASE_URL=/api
